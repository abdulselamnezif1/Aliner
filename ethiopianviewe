        // DOM Elements
        const filterButtons = document.querySelectorAll('.filter-btn');
        const attractionsContainer = document.getElementById('attractions-container');
        const searchInput = document.getElementById('search-input');
        const attractionCount = document.getElementById('attraction-count');
        const paginationContainer = document.getElementById('pagination');

        // State variables
        let currentFilter = 'all';
        let currentSearch = '';
        let currentPage = 1;
        const itemsPerPage = 9;

        // Function to display attractions
        function displayAttractions(attractionsToShow, page = 1) {
            attractionsContainer.innerHTML = '';
            
            // Calculate pagination
            const startIndex = (page - 1) * itemsPerPage;
            const endIndex = startIndex + itemsPerPage;
            const paginatedAttractions = attractionsToShow.slice(startIndex, endIndex);
            
            // Update count
            attractionCount.textContent = attractionsToShow.length;
            
            // Display attractions
            paginatedAttractions.forEach(attraction => {
                const card = document.createElement('div');
                card.className = 'attraction-card';
                card.setAttribute('data-region', attraction.region);
                card.setAttribute('data-type', attraction.type);
                card.innerHTML = `
                    <img src="${attraction.image}" alt="${attraction.name}" class="card-img" onerror="this.src='https://via.placeholder.com/400x300/CCCCCC/969696?text=Image+Not+Found'">
                    <div class="card-content">
                        <h3>${attraction.name}</h3>
                        <div class="card-tags">
                            <span class="region-tag">${attraction.region}</span>
                            <span class="type-tag">${attraction.type}</span>
                        </div>
                        <p>${attraction.description}</p>
                        <div class="card-footer">
                            <div class="rating">â˜… ${attraction.rating}</div>
                            <button class="view-btn">View Details</button>
                        </div>
                    </div>
                `;
                attractionsContainer.appendChild(card);
            });
            
            // Update pagination
            updatePagination(attractionsToShow.length, page);
        }

        // Function to update pagination buttons
        function updatePagination(totalItems, currentPage) {
            const totalPages = Math.ceil(totalItems / itemsPerPage);
            paginationContainer.innerHTML = '';
            
            if (totalPages <= 1) return;
            
            // Previous button
            if (currentPage > 1) {
                const prevBtn = document.createElement('button');
                prevBtn.className = 'page-btn';
                prevBtn.textContent = 'Previous';
                prevBtn.addEventListener('click', () => {
                    filterAndDisplayAttractions(currentPage - 1);
                });
                paginationContainer.appendChild(prevBtn);
            }
            
            // Page buttons
            for (let i = 1; i <= totalPages; i++) {
                const pageBtn = document.createElement('button');
                pageBtn.className = `page-btn ${i === currentPage ? 'active' : ''}`;
                pageBtn.textContent = i;
                pageBtn.addEventListener('click', () => {
                    filterAndDisplayAttractions(i);
                });
                paginationContainer.appendChild(pageBtn);
            }
            
            // Next button
            if (currentPage < totalPages) {
                const nextBtn = document.createElement('button');
                nextBtn.className = 'page-btn';
                nextBtn.textContent = 'Next';
                nextBtn.addEventListener('click', () => {
                    filterAndDisplayAttractions(currentPage + 1);
                });
                paginationContainer.appendChild(nextBtn);
            }
        }

        // Function to filter and display attractions
        function filterAndDisplayAttractions(page = 1) {
            currentPage = page;
            
            let filteredAttractions;
            
            if (currentFilter === 'all') {
                filteredAttractions = attractions;
            } else {
                filteredAttractions = attractions.filter(attraction =>
                    attraction.region === currentFilter || attraction.type === currentFilter
                );
            }
            
            // Apply search filter
            if (currentSearch) {
                filteredAttractions = filteredAttractions.filter(attraction =>
                    attraction.name.toLowerCase().includes(currentSearch.toLowerCase()) ||
                    attraction.description.toLowerCase().includes(currentSearch.toLowerCase())
                );
            }
            
            displayAttractions(filteredAttractions, page);
        }

        // Initial display of all attractions
        filterAndDisplayAttractions();

        // Filter functionality
        filterButtons.forEach(button => {
            button.addEventListener('click', () => {
                // Set active button
                filterButtons.forEach(btn => btn.classList.remove('active'));
                button.classList.add('active');

                currentFilter = button.getAttribute('data-filter');
                filterAndDisplayAttractions(1);
            });
        });

        // Search functionality
        searchInput.addEventListener('input', () => {
            currentSearch = searchInput.value;
            filterAndDisplayAttractions(1);
        });
    </script>

</body>
</html>
